pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // dev 브랜치 체크아웃
                git branch: 'dev', url: 'https://github.com/dnrwn/restapi_song.git'
            }
        }
        stage('Merge to Test') {
            steps {
                // Git 설정 및 dev 브랜치의 변경사항을 test 브랜치에 병합
                withCredentials([string(credentialsId: 'Github_PAT', variable: 'GIT_TOKEN')]) {
                    sh '''
                        git config user.name "dnrwn"
                        git config user.email "sskid12@naver.com"
                        git checkout test
                        git merge dev || (git merge --abort && exit 1)
                        git push https://${GIT_TOKEN}@github.com/dnrwn/restapi_song.git test
                    '''
                }
            }
        }
    }
    post {
        always {
            echo 'test branch update job'
        }
        success {
            echo 'test branch build Succeeded.'
        }
        failure {
            echo 'test branch update Failed.'
        }
    }
}
